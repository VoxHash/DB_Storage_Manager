{
  "name": "db-storage-manager",
  "version": "1.0.0",
  "description": "A production-ready desktop application for visualizing and managing database storage, growth, and backups across multiple engines",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @dbsm/desktop dev",
    "build": "pnpm --filter @dbsm/desktop build",
    "dist": "pnpm --filter @dbsm/desktop dist",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write .",
    "demo:up": "pnpm --filter @dbsm/demo demo:up",
    "demo:down": "pnpm --filter @dbsm/demo demo:down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
